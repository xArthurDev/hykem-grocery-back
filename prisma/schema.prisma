generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model tokens {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @db.Date
  expiresAt DateTime @db.Date
  token     String
  email     String

  @@unique([token])
}

model users {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String
  name     String
  password String
  username String
}
